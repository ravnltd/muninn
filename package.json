{
  "name": "claude-context-engine",
  "version": "2.0.0",
  "description": "Semantic memory system for Claude Code - persistent context across sessions",
  "type": "module",
  "bin": {
    "context": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile=context",
    "build:mcp": "bun build ./src/mcp-server.ts --compile --outfile=context-mcp",
    "install-global": "bun build ./src/index.ts --compile --outfile=/usr/local/bin/context && bun build ./src/mcp-server.ts --compile --outfile=/usr/local/bin/context-mcp",
    "mcp": "bun run src/mcp-server.ts",
    "dev": "bun run src/index.ts",
    "typecheck": "bun x tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "db:push": "bunx drizzle-kit push"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "drizzle-orm": "^0.45.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.0"
  },
  "author": "RÃ¥ven",
  "license": "MIT"
}
