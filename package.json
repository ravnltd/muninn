{
  "name": "muninn",
  "version": "8.0.0",
  "description": "Semantic memory system for AI-assisted development - persistent context across sessions",
  "type": "module",
  "bin": {
    "muninn": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile=muninn",
    "build:mcp": "bun build ./src/mcp-server.ts --compile --outfile=muninn-mcp",
    "build:dashboard": "cd src/dashboard && bun install && bun run build",
    "build:all": "bun run build:dashboard && bun run build && bun run build:mcp",
    "install-global": "bun build ./src/index.ts --compile --outfile=/usr/local/bin/muninn && bun build ./src/mcp-server.ts --compile --outfile=/usr/local/bin/muninn-mcp",
    "mcp": "bun run src/mcp-server.ts",
    "dev": "bun run src/index.ts",
    "dev:dashboard": "cd src/dashboard && bun run dev",
    "typecheck": "bun x tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "db:push": "bunx drizzle-kit push",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:coverage:check": "bun test --coverage --coverage-threshold 80",
    "lint": "biome lint src/ tests/",
    "lint:fix": "biome lint --write src/ tests/",
    "format": "biome format src/ tests/",
    "format:fix": "biome format --write src/ tests/",
    "check": "biome check src/ tests/",
    "check:fix": "biome check --write src/ tests/",
    "prepare": "sh scripts/setup-hooks.sh",
    "precommit": "bun run typecheck && bun run lint && bun test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@huggingface/transformers": "^3.5.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "hono-rate-limiter": "^0.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.0"
  },
  "author": "Ravn Ltd (https://r√•ven.com)",
  "license": "PolyForm-Noncommercial-1.0.0"
}
